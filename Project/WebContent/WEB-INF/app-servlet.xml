<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="studentManager" class="pl.krzysh.learningproject.service.SimpleStudentManager">
        <property name="students">
            <list>
                <ref bean="student1"/>
                <ref bean="student2"/>
                <ref bean="student3"/>
            </list>
        </property>
    </bean>

    <bean id="student1" class="pl.krzysh.learningproject.domain.Student">
        <property name="firstName" value="Student1"/>
        <property name="surName" value="Number1"/>
    </bean>
        
    <bean id="student2" class="pl.krzysh.learningproject.domain.Student">
        <property name="firstName" value="Student2"/>
        <property name="surName" value="Number2"/>
    </bean>

    <bean id="student3" class="pl.krzysh.learningproject.domain.Student">
        <property name="firstName" value="Student3"/>
        <property name="surName" value="Number3"/>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="messages"/>
    </bean>

    <bean name="/hello.htm" class="pl.krzysh.learningproject.web.StudentController">
        <property name="studentManager" ref="studentManager"/>
    </bean>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

</beans>